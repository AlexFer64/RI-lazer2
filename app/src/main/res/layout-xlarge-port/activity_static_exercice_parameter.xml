<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projet15.lazer.MenuPrincipal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/TAILLE_TEXTE_BOUTON"
                android:textStyle="bold"
                android:text="@string/PROVISOIRE_LOGO_APPLICATION"
                android:layout_gravity="center"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <Button
                android:id="@+id/STATIC_BUTTON_ID"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="@dimen/MARGIN_TOP_BUTTON"
                android:layout_marginBottom="@dimen/MARGIN_BOTTOM_BUTTON"
                android:layout_marginStart="@dimen/MARGIN_LEFT_BUTTON"
                android:layout_marginLeft="@dimen/MARGIN_LEFT_BUTTON"
                android:layout_marginEnd="@dimen/MARGIN_RIGHT_BUTTON"
                android:layout_marginRight="@dimen/MARGIN_RIGHT_BUTTON"
                android:background="@color/ROUGE_CHARTE_GRAPHIQUE"
                android:textAllCaps="false"
                android:textSize="@dimen/TAILLE_TEXTE_BOUTON"
                android:text="@string/STATIC_EXERCICE" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <Button
                android:id="@+id/RYTHM_BUTTON_ID"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"

                android:layout_marginTop="@dimen/MARGIN_TOP_BUTTON"
                android:layout_marginBottom="@dimen/MARGIN_BOTTOM_BUTTON"
                android:layout_marginStart="@dimen/MARGIN_LEFT_BUTTON"
                android:layout_marginLeft="@dimen/MARGIN_LEFT_BUTTON"
                android:layout_marginEnd="@dimen/MARGIN_RIGHT_BUTTON"
                android:layout_marginRight="@dimen/MARGIN_RIGHT_BUTTON"
                android:background="@color/ROUGE_CHARTE_GRAPHIQUE"
                android:textSize="@dimen/TAILLE_TEXTE_BOUTON"
                android:textAllCaps="false"
                android:text="@string/RYTHM_EXERCICE" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <Button
                android:id="@+id/DATAMANAGER_BUTTON_ID"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="@dimen/MARGIN_TOP_BUTTON"
                android:layout_marginBottom="@dimen/MARGIN_BOTTOM_BUTTON"
                android:layout_marginStart="@dimen/MARGIN_LEFT_BUTTON"
                android:layout_marginLeft="@dimen/MARGIN_LEFT_BUTTON"
                android:layout_marginEnd="@dimen/MARGIN_RIGHT_BUTTON"
                android:layout_marginRight="@dimen/MARGIN_RIGHT_BUTTON"
                android:background="@color/ROUGE_CHARTE_GRAPHIQUE"
                android:textSize="@dimen/TAILLE_TEXTE_BOUTON"
                android:textAllCaps="false"
                android:text="@string/DATA_MANAGER" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="11.5"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
