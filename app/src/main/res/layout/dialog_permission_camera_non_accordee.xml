<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/NOIR"
            android:textStyle="bold"
            android:text="@string/Titre_Autorisation_Camera" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:text="@string/Contenu_Autorisatoin_Camera" />

    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:gravity="right">

        <Button
            android:id="@+id/CANCEL_BUTTON_ID"
            android:layout_width="wrap_content"
            android:minWidth="64dp"
            android:layout_height="36dp"
            android:textColor="@color/BLEU_BOUTONS"
            android:text="@string/Bouton_Autoriser"
            android:layout_gravity="center_vertical"
            android:theme="@style/BoutonDialoguesAutorisation"/>

        <Button
            android:id="@+id/AUTHORIZE_BUTTON_ID"
            android:layout_width="wrap_content"
            android:minWidth="64dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/BLEU_BOUTONS"
            android:layout_height="36dp"
            android:text="@string/Bouton_Cancel"
            android:layout_gravity="center_vertical"
            android:theme="@style/BoutonDialoguesAutorisation"/>

    </LinearLayout>

</LinearLayout>